@using PierresBakery.Models; @{ Layout = "_Layout"; }

<h3>Orders for @Model.Name</h3>

<ol>
  @foreach (Order order in @Model["Orders"]) {
  <li>
    <a href='/vendors/@Model["Vendor"].Id/orders/@order.Id'
      >@order.Description</a
    >
  </li>
  }
</ol>

<p><a href='/vendors/@Model["Vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href="/vendor">Return to vendor list</a></p>
<p><a href="/">Return to Home Page</a></p>
