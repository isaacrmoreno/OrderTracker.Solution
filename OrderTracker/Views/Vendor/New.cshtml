@{ Layout = "_Layout"; }

<h2>Please fill out form to add new vendor</h2>

<form action="/vendor/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id" />
  <label for="vendorName">Name:</label>
  <input id="vendorName" name="vendorName" type="text" />
  <label for="vendorDescription">Description:</label>
  <input id="vendorDescription" name="vendorDescription" type="text" />
  <button type="submit">Submit</button>
</form>

<p><a href="/">Back home</a></p>
